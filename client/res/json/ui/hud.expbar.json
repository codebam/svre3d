{
    "type": "ui",
    "id": "m.ui.hud.expbar",
    "widgets": [
        {
            "type": "bar",
            "widgets": [
                {
                    "type": "text",
                    "text": "$(player.exp.level)"
                }
            ],
            "bar": {
                "color": "#09d0d0",
                "current": "$(player.exp.current)",
                "max": "$(player.exp.max)",
                "width": "60px"
            }
        }
    ],
    "parent": "m.ui.hud.bottom.center"
}