{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "dist",
    "typeRoots": ["./server/types"],
    "paths": {
      "three": ["./server/types/three-override.d.ts"]
    }
  },
  "include": ["server/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
