{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "nodenext",
    "jsx": "react",

    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true
  },
  "include": ["client/scripts/**/*", "server/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
